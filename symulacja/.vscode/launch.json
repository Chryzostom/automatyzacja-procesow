    "version": "0.2.0",
    "configurations": [
        {
            "name": "DEBUG",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\build\\main.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\MinGW\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "Włącz formatowanie kodu dla gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "cmake"
        },
        {
            "name": "RUN",
            "type": "pwa-node",
            "request": "launch",
            "remote": true,
            "externalConsole": false,
            "preLaunchTask": "run",
            "setupCommands": [
                {
                    
                }
            ]
        }
    ]
}